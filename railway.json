{
  "deploy": {
    "startCommand": "python -u TestDS3.py",
    "restartPolicyType": "ALWAYS",
    "startTimeout": 180,
    "variables": {
      "BOT_TOKEN": "${{BOT_TOKEN}}",
      "DEEPSEEK_API_KEY": "${{DEEPSEEK_API_KEY}}",
      "OPENAI_API_KEY": "${{OPENAI_API_KEY}}",
      "PYTHONUNBUFFERED": "1"
    }
  },
  "build": {
    "nixpacks": {
      "packages": [
        "poppler-utils",
        "libjpeg",
        "zlib",
        "tesseract-ocr",
        "ffmpeg",        // Critical for voice processing
        "libopus0"       // Required for Telegram voice decoding
      ],
      "installCommand": "pip install --no-cache-dir -r requirements.txt"
    }
  }
}
