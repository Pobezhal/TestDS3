{
  "deploy": {
    "startCommand": "python TestDS3.py",
    "restartPolicyType": "ON_FAILURE", 
    "startTimeout": 180,
    "variables": {
      "BOT_TOKEN": "${{BOT_TOKEN}}",
      "DEEPSEEK_API_KEY": "${{DEEPSEEK_API_KEY}}",
      "OPENAI_API_KEY": "${{OPENAI_API_KEY}}",
      "PYTHONUNBUFFERED": "1"  # Добавляем для корректных логов
    }
  },
  "build": {
    "nixpacks": {
      "packages": ["poppler-utils", "libjpeg", "zlib", "tesseract-ocr"],  # Добавил OCR для PDF
      "installCommand": "pip install -r requirements.txt && python -m spacy download en_core_web_sm"
    }
  }
}
